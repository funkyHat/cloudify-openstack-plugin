tosca_definitions_version: cloudify_dsl_1_3

imports:
  - {{cloudify.types_location}}
  - {{magic.repo_root}}/plugin.yaml

inputs:
  prefix:
    description: >
      Unique test id to be added as a prefix for resource names.
  os_username:
    type: string
  os_password:
    type: string
  os_tenant_name:
    type: string
  os_auth_url:
    type: string
  os_region:
    type: string
  users:
    default: []

node_templates:
  project:
    type: cloudify.openstack.nodes.Project
    properties:
      resource_id: { concat: [{ get_input: prefix }, '-just-project'] }
      users: { get_input: users }
      openstack_config:
        username: { get_input: os_username }
        password: { get_input: os_password }
        tenant_name: { get_input: os_tenant_name }
        auth_url: { get_input: os_auth_url }
        region: { get_input: os_region }
