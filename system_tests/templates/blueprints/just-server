tosca_definitions_version: cloudify_dsl_1_3

imports:
  - {{cloudify.types_location}}
  - {{magic.repo_root}}/plugin.yaml

inputs:
  prefix:
    description: >
      Unique test id to be added as a prefix for resource names.
  keypair_name:
    type: string
  image_id:
    type: string
  flavor_id:
    type: string
  network_name:
    type: string
  os_username:
    type: string
  os_password:
    type: string
  os_tenant_name:
    type: string
  os_auth_url:
    type: string
  os_region:
    type: string

node_templates:
  server:
    type: cloudify.openstack.nodes.Server
    properties:
      install_agent: false
      resource_id: { concat: [{ get_input: prefix }, '-just-server'] }
      image: { get_input: image_id }
      flavor: { get_input: flavor_id }
      management_network_name: { get_input: network_name }
      openstack_config: &OPENSTACK_CONFIG
        username: { get_input: os_username }
        password: { get_input: os_password }
        tenant_name: { get_input: os_tenant_name }
        auth_url: { get_input: os_auth_url }
        region: { get_input: os_region }
    relationships:
      - target: keypair
        type: cloudify.openstack.server_connected_to_keypair

  keypair:
    type: cloudify.openstack.nodes.KeyPair
    properties:
      resource_id: { get_input: keypair_name }
      use_external_resource: true
      private_key_path: just-server.yaml
      openstack_config: *OPENSTACK_CONFIG
